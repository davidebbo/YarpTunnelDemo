{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Tunnel": {
    "Url": "https://localhost:7244/connect-h2?host=backend1.app"
  },
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "{**catch-all}",
          "Headers": [
            {
              "Name": "X-Forwarded-Host",
              "Values": [ "localhost:7244" ]
            }
          ]
        }
      },
      "route2": {
        "ClusterId": "cluster2",
        "Match": {
          "Path": "{**catch-all}",
          "Headers": [
            {
              "Name": "X-Forwarded-Host",
              "Values": [ "localhost:7245" ]
            }
          ]
        }
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "cluster1/destination1": {
            "Address": "https://localhost:7053/"
          }
        }
      },
      "cluster2": {
        "Destinations": {
          "cluster1/destination1": {
            "Address": "https://localhost:7054/"
          }
        }
      }
    }
  }
}
